<Window x:Class="Mogu.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mogu.Sample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Background="Red">
            <TextBlock x:Name="textBlock"></TextBlock>
            <TextBox x:Name="textBox"></TextBox>
            <Button Click="Button_Click">Send Text</Button>
        </StackPanel>
        <TextBox Grid.Row="1" x:Name="logText" AcceptsReturn="True"></TextBox>
    </Grid>
</Window>
